<%= render "shared/content_header"%>
<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-body">
          <div class="dataTables_wrapper form-inline dt-bootstrap">
            <div class="row">
              <div class="col-sm-12">
                <table class="table table-bordered table-striped dataTable">
                  <thead>
                    <tr role="row">
                      <th>用户</th>
                      <th>省份</th>
                      <th>城市</th>
                      <th>区县</th>
                      <th>地址</th>
                      <th>电话</th>
                      <th>收货人</th>
                      <th colspan="3"></th>
                    </tr>
                  </thead>
                  <tbody>
                  <% @user_delivery_addresses.each do |a| %>
                    <tr>
                      <td><%= link_to a.user.email, a.user %></td>
                      <td><%= a.province.name if a.province %></td>
                      <td><%= a.city.name if a.city %></td>
                      <td><%= a.district.name if a.district %></td>
                      <td><%= a.address %></td>
                      <td><%= a.telephone %></td>
                      <td><%= a.receiver %></td>
                      <td>
                        <%= link_to '<i class="fa fa-info"></i>'.html_safe, a, {"data-toggle" => "tooltip", :title=>"查看"} %>
                        <%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_user_delivery_address_path(a), {"data-toggle" => "tooltip", :title=>"编辑"} %>
                        <%= link_to '<i class="fa fa-remove"></i>'.html_safe, a, method: :delete, data: { confirm: 'Are you sure?' } %>
                      </td>
                      <td><%= link_to 'Edit', edit_user_delivery_address_path(a) %></td>
                      <td><%= link_to 'Destroy', a, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    </tr>
                  <% end %>
                </tbody>
                </table>
                <%= link_to '新建用户收货地址', new_user_delivery_address_path, :class => "btn-primary btn-sm"%>
              </div>
            </div>

          </div>

        </div>
      </div>
    </div>
  </div>
</section>