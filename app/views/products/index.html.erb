<%= render "shared/content_header"%>
<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-body">
          <div class="dataTables_wrapper form-inline dt-bootstrap">
            <div class="row">
              <div class="col-sm-12">
                <table class="table table-bordered table-striped dataTable">
                  <thead>
                    <tr role="row">
                      <th>名称</th>
                      <th>分类</th>
                      <th>品牌</th>
                      <th>图片</th>
                      <th>标签</th>
                      <th>顺序</th>
                      <th>显示</th>
                      <th colspan="3"></th>
                    </tr>
                  </thead>
                  <tbody>
                  <% @products.each do |product| %>
                    <tr>
                      <td><%= product.name %></td>
                      <td><%= product.category.name %></td>
                      <td><%= product.brand.name if product.brand %></td>
                      <td>
                        <% product.pictures.each do |p| %>
                        <div style="float:left;">
                          <div>
                          <%= image_tag p.image.url(:thumb) %>
                          </div>
                          <div>
                            <a href="#">U</a>
                            <a href="#">D</a>
                            <a href="#">D</a>
                          </div>
                        </div>
                        <% end %> 
                        <div style="clear:both"></div>
                      </td>
                      <td>
                        <%= product.tag_list.join(",") %>
                      </td>
                      <td>
                        <%= link_to '<i class="fa fa-info"></i>'.html_safe, product, {"data-toggle" => "tooltip", :title=>"查看"} %>
                        <%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_product_path(product), {"data-toggle" => "tooltip", :title=>"编辑"} %>
                        <%= link_to '<i class="fa fa-remove"></i>'.html_safe, product, {"data-toggle" => "tooltip", :title=>"删除"} %>
                      </td>
                      <td><%= link_to 'Edit', edit_product_path(product) %></td>
                      <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    </tr>
                  <% end %>
                </tbody>
                </table>
                <%= link_to '新建商品', new_product_path, :class => "btn-primary btn-sm"%>
              </div>
            </div>

          </div>

        </div>
      </div>
    </div>
  </div>
</section>

