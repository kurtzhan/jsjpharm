<%= render "shared/content_header"%>
<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-body">
          <div class="dataTables_wrapper form-inline dt-bootstrap">
            <div class="row">
              <div class="col-sm-12">
                <table class="table table-bordered table-striped dataTable">
                  <thead>
                    <tr role="row">
                      <th>名称</th>
                      <th>父级分类</th>
                      <th>顺序</th>
                      <th>显示</th>
                      <th colspan="3"></th>
                    </tr>
                  </thead>
                  <tbody>
                  <% @categories.each do |category| %>
                    <tr>
                      <td><%= category.name %></td>
                      <td><%= category.parent_category_id.nil? ? "" : Category.find(category.parent_category_id).category_path.map{|item| item[0]}.join("->") %></td>
                      <td><%= category.order %></td>
                      <td><%= category.visible == 'y' ? '是' : '否' %></td>
                      <td>
                        <%= link_to '<i class="fa fa-info"></i>'.html_safe, category, {"data-toggle" => "tooltip", :title=>"查看"} %>
                        <%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_category_path(category), {"data-toggle" => "tooltip", :title=>"编辑"} %>
                        <%= link_to '<i class="fa fa-remove"></i>'.html_safe, category, {"data-toggle" => "tooltip", :title=>"删除"} %>
                      </td>
                      <td><%= link_to 'Edit', edit_category_path(category) %></td>
                      <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    </tr>
                  <% end %>
                </tbody>
                </table>
                <%= link_to '新建商品分类', new_category_path, :class => "btn-primary btn-sm"%>
              </div>
            </div>

          </div>

        </div>
      </div>
    </div>
  </div>
</section>

